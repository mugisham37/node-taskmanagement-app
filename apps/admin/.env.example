# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="TaskManagement Admin"
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration
NEXT_PUBLIC_AUTH_SESSION_TIMEOUT=28800000
NEXT_PUBLIC_AUTH_INACTIVITY_TIMEOUT=1800000
NEXT_PUBLIC_AUTH_REQUIRE_MFA=true

# Monitoring Configuration
NEXT_PUBLIC_PROMETHEUS_URL=http://localhost:9090
NEXT_PUBLIC_GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key-here
NEXT_PUBLIC_ALERTMANAGER_URL=http://localhost:9093
NEXT_PUBLIC_JAEGER_URL=http://localhost:16686

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# Feature Flags
NEXT_PUBLIC_FEATURE_USER_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_SYSTEM_MONITORING=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true
NEXT_PUBLIC_FEATURE_ALERT_MANAGEMENT=true

# Development Configuration
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG_MODE=false

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_TRACKING_ID=

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=false

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1