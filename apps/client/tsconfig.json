{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@taskmanagement/shared": ["../../packages/shared/src"],
      "@taskmanagement/shared/*": ["../../packages/shared/src/*"],
      "@taskmanagement/database": ["../../packages/database/src"],
      "@taskmanagement/database/*": ["../../packages/database/src/*"],
      "@taskmanagement/ui": ["../../packages/ui/src"],
      "@taskmanagement/ui/*": ["../../packages/ui/src/*"],
      "@taskmanagement/config": ["../../packages/config/src"],
      "@taskmanagement/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/database"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/config"
    }
  ]
}