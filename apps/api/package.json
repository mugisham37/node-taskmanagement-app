{
  "name": "@taskmanagement/server",
  "version": "1.0.0",
  "description": "Task management server with Clean Architecture and CQRS",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "tsx scripts/run-tests.ts run --category=all",
    "test:watch": "tsx scripts/run-tests.ts run --category=all --watch",
    "test:coverage": "tsx scripts/run-tests.ts run --category=all --coverage",
    "test:unit": "tsx scripts/run-tests.ts run --category=unit",
    "test:integration": "tsx scripts/run-tests.ts run --category=integration --environment=local",
    "test:e2e": "tsx scripts/run-tests.ts run --category=e2e --environment=local",
    "test:performance": "tsx scripts/run-tests.ts run --category=performance --environment=local",
    "test:security": "tsx scripts/run-tests.ts run --category=security --environment=local",
    "test:quick": "tsx scripts/run-tests.ts quick",
    "test:ci": "tsx scripts/run-tests.ts ci",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "test:setup": "tsx scripts/run-tests.ts setup",
    "test:teardown": "tsx scripts/run-tests.ts teardown",
    "test:categories": "tsx scripts/run-tests.ts categories",
    "test:environments": "tsx scripts/run-tests.ts environments",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "cd ../../packages/database && npm run db:generate",
    "db:migrate": "cd ../../packages/database && npm run db:migrate",
    "db:push": "cd ../../packages/database && npm run db:push",
    "db:studio": "cd ../../packages/database && npm run db:studio",
    "db:seed": "cd ../../packages/database && npm run db:seed",
    "docker:build": "docker build -t unified-enterprise-platform .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "dev:setup": "tsx scripts/dev-setup.ts",
    "check:setup": "tsx scripts/check-setup.ts",
    "setup:dev": "tsx scripts/setup-environment.ts development",
    "setup:prod": "tsx scripts/setup-environment.ts production",
    "setup:staging": "tsx scripts/setup-environment.ts staging",
    "setup:test": "tsx scripts/setup-environment.ts test",
    "validate:config": "tsx scripts/validate-configuration.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "authentication",
    "task-management",
    "enterprise",
    "nodejs",
    "typescript",
    "fastify",
    "ddd",
    "multi-tenant",
    "clean-architecture",
    "cqrs",
    "drizzle-orm",
    "websocket",
    "redis",
    "monitoring",
    "security"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/websocket": "^10.0.1",
    "@taskmanagement/auth": "workspace:*",
    "@taskmanagement/cache": "workspace:*",
    "@taskmanagement/config": "workspace:*",
    "@taskmanagement/core": "workspace:*",
    "@taskmanagement/database": "workspace:*",
    "@taskmanagement/domain": "workspace:*",
    "@taskmanagement/events": "workspace:*",
    "@taskmanagement/i18n": "workspace:*",
    "@taskmanagement/integrations": "workspace:*",
    "@taskmanagement/jobs": "workspace:*",
    "@taskmanagement/observability": "workspace:*",
    "@taskmanagement/types": "workspace:*",
    "@taskmanagement/utils": "workspace:*",
    "@taskmanagement/validation": "workspace:*",
    "@trpc/server": "^10.45.0",
    "fastify": "^5.5.0",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.1.4",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=999",
      "prettier --write"
    ]
  }
}
