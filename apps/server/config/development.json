{
  "server": {
    "nodeEnv": "development",
    "port": 3000,
    "host": "0.0.0.0",
    "apiVersion": "v1",
    "trustProxy": false,
    "bodyLimit": 1048576,
    "keepAliveTimeout": 5000
  },
  "database": {
    "url": "postgresql://postgres:postgres@localhost:5432/unified_enterprise_platform",
    "testUrl": "postgresql://postgres:postgres@localhost:5432/unified_enterprise_platform_test",
    "maxConnections": 10,
    "connectionTimeout": 30000,
    "idleTimeout": 600000,
    "ssl": false,
    "logging": true
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "maxRetriesPerRequest": 3,
    "retryDelayOnFailover": 100,
    "enableOfflineQueue": false,
    "lazyConnect": true
  },
  "jwt": {
    "secret": "dev-jwt-secret-change-this-in-production-32-chars-minimum",
    "refreshSecret": "dev-refresh-secret-change-this-in-production-32-chars-minimum",
    "expiresIn": "15m",
    "refreshExpiresIn": "7d",
    "issuer": "unified-enterprise-platform-dev",
    "audience": "unified-enterprise-platform-dev"
  },
  "security": {
    "corsOrigin": ["http://localhost:3000", "http://localhost:3001", "http://localhost:5173"],
    "rateLimitMax": 1000,
    "rateLimitWindow": 900000,
    "sessionSecret": "dev-session-secret-change-this-in-production-32-chars-minimum",
    "csrfSecret": "dev-csrf-secret-change-this-in-production-32-chars-minimum",
    "bcryptRounds": 10,
    "enableHelmet": true,
    "enableCors": true
  },
  "email": {
    "provider": "smtp",
    "smtp": {
      "host": "localhost",
      "port": 1025,
      "secure": false,
      "user": "",
      "pass": ""
    },
    "from": "dev@unified-enterprise-platform.local",
    "replyTo": "noreply@unified-enterprise-platform.local"
  },
  "storage": {
    "type": "local",
    "local": {
      "path": "./uploads",
      "maxFileSize": 10485760
    }
  },
  "monitoring": {
    "enabled": true,
    "prometheus": {
      "enabled": true,
      "port": 9090,
      "path": "/metrics"
    },
    "logging": {
      "level": "debug",
      "format": "simple",
      "maxFiles": 5,
      "maxSize": "20m"
    },
    "healthCheck": {
      "enabled": true,
      "path": "/health",
      "interval": 30000
    }
  },
  "featureFlags": {
    "enableRegistration": true,
    "enableMFA": true,
    "enableOAuth": true,
    "enableWebAuthn": true,
    "enableEmailVerification": false,
    "enableAuditLog": true,
    "enableRealTimeUpdates": true,
    "enableFileUpload": true,
    "enableNotifications": true,
    "enableCalendarIntegration": false,
    "enableAdvancedSearch": true,
    "enableBulkOperations": true
  },
  "externalServices": {
    "twilio": {
      "accountSid": "",
      "authToken": "",
      "phoneNumber": ""
    },
    "google": {
      "clientId": "",
      "clientSecret": "",
      "redirectUri": "http://localhost:3000/auth/google/callback"
    },
    "github": {
      "clientId": "",
      "clientSecret": "",
      "redirectUri": "http://localhost:3000/auth/github/callback"
    },
    "webhook": {
      "secret": "dev-webhook-secret-32-chars-minimum",
      "timeout": 30000,
      "retries": 3
    }
  }
}