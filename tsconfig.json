{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "apps/*/src/**/*",
    "packages/*/src/**/*",
    "tools/*/src/**/*",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo",
    "coverage"
  ],
  "references": [
    { "path": "./apps/api" },
    { "path": "./apps/web" },
    { "path": "./apps/admin" },
    { "path": "./apps/mobile" },
    { "path": "./packages/core" },
    { "path": "./packages/types" },
    { "path": "./packages/validation" },
    { "path": "./packages/utils" },
    { "path": "./packages/config" },
    { "path": "./packages/i18n" },
    { "path": "./packages/domain" },
    { "path": "./packages/auth" },
    { "path": "./packages/database" },
    { "path": "./packages/cache" },
    { "path": "./packages/events" },
    { "path": "./packages/observability" },
    { "path": "./packages/integrations" },
    { "path": "./packages/jobs" },
    { "path": "./packages/ui" }
  ]
}