{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/store/*": ["./src/store/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@taskmanagement/shared": ["../../packages/shared/src"],
      "@taskmanagement/shared/*": ["../../packages/shared/src/*"],
      "@taskmanagement/database": ["../../packages/database/src"],
      "@taskmanagement/database/*": ["../../packages/database/src/*"],
      "@taskmanagement/ui": ["../../packages/ui/src"],
      "@taskmanagement/ui/*": ["../../packages/ui/src/*"],
      "@taskmanagement/config": ["../../packages/config/src"],
      "@taskmanagement/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "coverage"
  ]
}