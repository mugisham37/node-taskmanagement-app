{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@taskmanagement/shared": ["../../packages/shared/src"],
      "@taskmanagement/shared/*": ["../../packages/shared/src/*"],
      "@taskmanagement/database": ["../../packages/database/src"],
      "@taskmanagement/database/*": ["../../packages/database/src/*"],
      "@taskmanagement/config": ["../../packages/config/src"],
      "@taskmanagement/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}