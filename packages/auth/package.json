{
  "name": "@taskmanagement/auth",
  "version": "1.0.0",
  "description": "Authentication and authorization package for task management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@taskmanagement/core": "workspace:*",
    "@taskmanagement/types": "workspace:*",
    "@taskmanagement/validation": "workspace:*",
    "@taskmanagement/cache": "workspace:*",
    "@taskmanagement/utils": "workspace:*",
    "jsonwebtoken": "^9.0.2",
    "argon2": "^0.31.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "fastify": "^5.5.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "fastify": "^4.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.js",
      "require": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./rbac": {
      "import": "./dist/rbac/index.js",
      "require": "./dist/rbac/index.js",
      "types": "./dist/rbac/index.d.ts"
    },
    "./2fa": {
      "import": "./dist/2fa/index.js",
      "require": "./dist/2fa/index.js",
      "types": "./dist/2fa/index.d.ts"
    },
    "./session": {
      "import": "./dist/session/index.js",
      "require": "./dist/session/index.js",
      "types": "./dist/session/index.d.ts"
    },
    "./providers": {
      "import": "./dist/providers/index.js",
      "require": "./dist/providers/index.js",
      "types": "./dist/providers/index.d.ts"
    },
    "./encryption": {
      "import": "./dist/encryption/index.js",
      "require": "./dist/encryption/index.js",
      "types": "./dist/encryption/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/node-taskmanagement-app.git",
    "directory": "packages/auth"
  },
  "keywords": [
    "authentication",
    "authorization",
    "jwt",
    "2fa",
    "rbac",
    "oauth",
    "security"
  ],
  "author": "Your Organization",
  "license": "MIT"
}