{
  "name": "@taskmanagement/validation",
  "version": "1.0.0",
  "description": "Comprehensive validation package with Zod schemas, guards, decorators, and middleware",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "validator": "^13.11.0",
    "@taskmanagement/core": "workspace:*",
    "@taskmanagement/types": "workspace:*"
  },
  "devDependencies": {
    "@types/validator": "^13.11.7",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "require": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    },
    "./guards": {
      "import": "./dist/guards/index.js",
      "require": "./dist/guards/index.js",
      "types": "./dist/guards/index.d.ts"
    },
    "./decorators": {
      "import": "./dist/decorators/index.js",
      "require": "./dist/decorators/index.js",
      "types": "./dist/decorators/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}