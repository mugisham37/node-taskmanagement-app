{
  "name": "@monorepo/infrastructure",
  "version": "1.0.0",
  "description": "Infrastructure services and abstractions for the monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@monorepo/core": "workspace:*",
    "@monorepo/domain": "workspace:*",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "argon2": "^0.31.2",
    "speakeasy": "^2.0.0",
    "crypto-js": "^4.2.0",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/crypto-js": "^4.2.1",
    "@types/luxon": "^3.3.7",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./caching": {
      "types": "./dist/caching/index.d.ts",
      "import": "./dist/caching/index.js",
      "require": "./dist/caching/index.js"
    },
    "./external-services": {
      "types": "./dist/external-services/index.d.ts",
      "import": "./dist/external-services/index.js",
      "require": "./dist/external-services/index.js"
    },
    "./monitoring": {
      "types": "./dist/monitoring/index.d.ts",
      "import": "./dist/monitoring/index.js",
      "require": "./dist/monitoring/index.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "import": "./dist/security/index.js",
      "require": "./dist/security/index.js"
    },
    "./performance": {
      "types": "./dist/performance/index.d.ts",
      "import": "./dist/performance/index.js",
      "require": "./dist/performance/index.js"
    }
  }
}