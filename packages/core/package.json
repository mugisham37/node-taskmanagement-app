{
  "name": "@taskmanagement/core",
  "version": "1.0.0",
  "description": "Core foundational classes, utilities, and patterns for the task management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "nanoid": "^5.0.0",
    "drizzle-orm": "^0.30.0",
    "openapi-types": "^12.0.0",
    "fastify": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base/index.js",
      "require": "./dist/base/index.js",
      "types": "./dist/base/index.d.ts"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.js",
      "types": "./dist/errors/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js",
      "require": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    },
    "./enums": {
      "import": "./dist/enums/index.js",
      "require": "./dist/enums/index.js",
      "types": "./dist/enums/index.d.ts"
    },
    "./guards": {
      "import": "./dist/guards/index.js",
      "require": "./dist/guards/index.js",
      "types": "./dist/guards/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./events": {
      "import": "./dist/events/index.js",
      "require": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
