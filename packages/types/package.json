{
  "name": "@taskmanagement/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types and DTOs for the task management application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "generate:api": "tsx scripts/generate-api-types.ts",
    "generate:db": "tsx scripts/generate-db-types.ts",
    "generate:all": "npm run generate:api && npm run generate:db",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "types",
    "typescript",
    "dto",
    "interfaces",
    "task-management"
  ],
  "author": "Task Management Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "tsx": "^4.1.4",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}