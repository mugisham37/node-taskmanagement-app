{
  "name": "@taskmanagement/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for the task management monolith",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./date": {
      "import": "./dist/date/index.js",
      "require": "./dist/date/index.js",
      "types": "./dist/date/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "require": "./dist/crypto/index.js",
      "types": "./dist/crypto/index.d.ts"
    },
    "./string": {
      "import": "./dist/string/index.js",
      "require": "./dist/string/index.js",
      "types": "./dist/string/index.d.ts"
    },
    "./array": {
      "import": "./dist/array/index.js",
      "require": "./dist/array/index.js",
      "types": "./dist/array/index.d.ts"
    },
    "./object": {
      "import": "./dist/object/index.js",
      "require": "./dist/object/index.js",
      "types": "./dist/object/index.d.ts"
    },
    "./math": {
      "import": "./dist/math/index.js",
      "require": "./dist/math/index.js",
      "types": "./dist/math/index.d.ts"
    },
    "./formatting": {
      "import": "./dist/formatting/index.js",
      "require": "./dist/formatting/index.js",
      "types": "./dist/formatting/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "nanoid": "^4.0.2",
    "node-cache": "^5.1.2",
    "redis": "^4.6.7",
    "drizzle-orm": "^0.28.6"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4",
    "eslint": "^8.49.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/taskmanagement-monolith.git",
    "directory": "packages/utils"
  },
  "keywords": [
    "utilities",
    "helpers",
    "typescript",
    "monorepo"
  ],
  "author": "Your Organization",
  "license": "MIT"
}