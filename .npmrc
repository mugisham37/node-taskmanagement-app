# Use npm workspaces
workspaces=true

# Prevent package-lock.json in workspaces
package-lock=false

# Use exact versions for dependencies
save-exact=true

# Automatically install peer dependencies
auto-install-peers=true

# Use legacy peer deps resolution
legacy-peer-deps=false

# Audit level
audit-level=moderate

# Fund messages
fund=false

# Progress indicator
progress=true

# Log level
loglevel=warn

# Registry configuration
registry=https://registry.npmjs.org/

# Cache configuration
cache-max=86400000

# Engine strict
engine-strict=true

# Optional dependencies
optional=true

# Production flag for CI
production=false