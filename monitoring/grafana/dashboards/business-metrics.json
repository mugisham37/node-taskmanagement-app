{
  "dashboard": {
    "id": null,
    "title": "Business Metrics Dashboard",
    "tags": ["taskmanagement", "business"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Daily Active Users",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(user_sessions_total[24h])",
            "legendFormat": "Daily Active Users"
          }
        ],
        "yAxes": [
          {
            "label": "Users",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Task Creation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tasks_created_total[5m])",
            "legendFormat": "Tasks Created per Second"
          }
        ],
        "yAxes": [
          {
            "label": "Tasks/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Feature Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (feature) (increase(feature_usage_total[24h]))",
            "legendFormat": "{{feature}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "User Engagement Score",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(user_engagement_score)",
            "legendFormat": "Engagement Score"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m"
  }
}