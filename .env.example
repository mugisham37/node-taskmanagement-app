# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://taskmanagement:taskmanagement_password@localhost:5432/taskmanagement
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=taskmanagement
DATABASE_USER=taskmanagement
DATABASE_PASSWORD=taskmanagement_password
DATABASE_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXTAUTH_URL=http://localhost:3001

# API Configuration
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Web App Configuration
WEB_PORT=3001
WEB_HOST=localhost
WEB_BASE_URL=http://localhost:3001

# Admin App Configuration
ADMIN_PORT=3002
ADMIN_HOST=localhost
ADMIN_BASE_URL=http://localhost:3002

# File Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=taskmanagement
S3_SECRET_KEY=taskmanagement_password
S3_BUCKET=taskmanagement-files
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@taskmanagement.local
SMTP_SECURE=false

# Monitoring & Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# External Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.taskmanagement.mobile

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_WEBAUTHN_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_REAL_TIME_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
CSRF_SECRET=your-csrf-secret-change-this-in-production

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# Performance
CACHE_TTL=3600
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=52428800

# Development
HOT_RELOAD=true
SOURCE_MAPS=true
TYPESCRIPT_CHECK=true