{
  "server": {
    "nodeEnv": "test",
    "port": 3001,
    "host": "127.0.0.1",
    "apiVersion": "v1",
    "trustProxy": false,
    "bodyLimit": 1048576,
    "keepAliveTimeout": 5000
  },
  "database": {
    "url": "postgresql://postgres:postgres@localhost:5432/unified_enterprise_platform_test",
    "maxConnections": 5,
    "connectionTimeout": 10000,
    "idleTimeout": 300000,
    "ssl": false,
    "logging": false
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 1,
    "maxRetriesPerRequest": 1,
    "retryDelayOnFailover": 50,
    "enableOfflineQueue": false,
    "lazyConnect": true
  },
  "jwt": {
    "secret": "test-jwt-secret-32-chars-minimum-for-testing-only",
    "refreshSecret": "test-refresh-secret-32-chars-minimum-for-testing-only",
    "expiresIn": "1h",
    "refreshExpiresIn": "1d",
    "issuer": "unified-enterprise-platform-test",
    "audience": "unified-enterprise-platform-test"
  },
  "security": {
    "corsOrigin": ["http://localhost:3001"],
    "rateLimitMax": 10000,
    "rateLimitWindow": 60000,
    "sessionSecret": "test-session-secret-32-chars-minimum-for-testing-only",
    "csrfSecret": "test-csrf-secret-32-chars-minimum-for-testing-only",
    "bcryptRounds": 4,
    "enableHelmet": false,
    "enableCors": true
  },
  "email": {
    "provider": "smtp",
    "smtp": {
      "host": "localhost",
      "port": 1025,
      "secure": false,
      "user": "",
      "pass": ""
    },
    "from": "test@unified-enterprise-platform.test",
    "replyTo": "noreply@unified-enterprise-platform.test"
  },
  "storage": {
    "type": "local",
    "local": {
      "path": "./test-uploads",
      "maxFileSize": 1048576
    }
  },
  "monitoring": {
    "enabled": false,
    "prometheus": {
      "enabled": false,
      "port": 9091,
      "path": "/metrics"
    },
    "logging": {
      "level": "error",
      "format": "simple",
      "maxFiles": 1,
      "maxSize": "10m"
    },
    "healthCheck": {
      "enabled": false,
      "path": "/health",
      "interval": 60000
    }
  },
  "featureFlags": {
    "enableRegistration": true,
    "enableMFA": false,
    "enableOAuth": false,
    "enableWebAuthn": false,
    "enableEmailVerification": false,
    "enableAuditLog": false,
    "enableRealTimeUpdates": false,
    "enableFileUpload": true,
    "enableNotifications": false,
    "enableCalendarIntegration": false,
    "enableAdvancedSearch": false,
    "enableBulkOperations": true
  },
  "externalServices": {
    "webhook": {
      "secret": "test-webhook-secret-32-chars-minimum-for-testing-only",
      "timeout": 5000,
      "retries": 1
    }
  }
}