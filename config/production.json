{
  "server": {
    "nodeEnv": "production",
    "port": 3000,
    "host": "0.0.0.0",
    "apiVersion": "v1",
    "trustProxy": true,
    "bodyLimit": 1048576,
    "keepAliveTimeout": 65000
  },
  "database": {
    "maxConnections": 20,
    "connectionTimeout": 30000,
    "idleTimeout": 600000,
    "ssl": true,
    "logging": false
  },
  "redis": {
    "db": 0,
    "maxRetriesPerRequest": 3,
    "retryDelayOnFailover": 100,
    "enableOfflineQueue": false,
    "lazyConnect": true
  },
  "jwt": {
    "expiresIn": "15m",
    "refreshExpiresIn": "7d",
    "issuer": "unified-enterprise-platform",
    "audience": "unified-enterprise-platform"
  },
  "security": {
    "rateLimitMax": 100,
    "rateLimitWindow": 900000,
    "bcryptRounds": 12,
    "enableHelmet": true,
    "enableCors": true
  },
  "email": {
    "provider": "smtp",
    "smtp": {
      "port": 587,
      "secure": false
    }
  },
  "storage": {
    "type": "s3",
    "local": {
      "maxFileSize": 10485760
    }
  },
  "monitoring": {
    "enabled": true,
    "prometheus": {
      "enabled": true,
      "port": 9090,
      "path": "/metrics"
    },
    "logging": {
      "level": "info",
      "format": "json",
      "maxFiles": 10,
      "maxSize": "50m"
    },
    "healthCheck": {
      "enabled": true,
      "path": "/health",
      "interval": 30000
    }
  },
  "featureFlags": {
    "enableRegistration": true,
    "enableMFA": true,
    "enableOAuth": true,
    "enableWebAuthn": true,
    "enableEmailVerification": true,
    "enableAuditLog": true,
    "enableRealTimeUpdates": true,
    "enableFileUpload": true,
    "enableNotifications": true,
    "enableCalendarIntegration": true,
    "enableAdvancedSearch": true,
    "enableBulkOperations": true
  },
  "externalServices": {
    "webhook": {
      "timeout": 30000,
      "retries": 3
    }
  }
}